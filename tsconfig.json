{
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "compilerOptions": {
    "target": "esnext",
    "strict": true,
    "module": "ES2022",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "watch": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "checkJs": false,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "outDir": "./dist",
    "sourceMap": true
  },
  "exclude": ["site"]
}
