{
    "compilerOptions": {
        "target": "ES2020",
        "strict": true,
        "module": "ES2020",
        "lib": ["dom", "esnext"],
        "moduleResolution": "node",
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": false,
        "checkJs": false,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "outDir": "./dist",
        "sourceMap": true,
        "strictPropertyInitialization": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "test"]
}
